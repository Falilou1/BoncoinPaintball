
<div class="card mb-4 box-shadow">
<div class="img-card-canvas">
   <div>
   {% if is_granted("ROLE_USER") %}
      {% set isFavorite = false %}
			{% for favoris in advert.favoris %}
				{% if favoris.id == app.user.id %}
                  {% set isFavorite = true %}
					{% endif %}    
					{% endfor %}
                {% if isFavorite %}
				<a href="{{ path('adverts_remove_favoris', {id: advert.id}) }}"><i class="fa-solid fa-heart" style="color: #f31127;"></i></a>

                       {% else %}
				<a href="{{ path('adverts_add_favoris', {id: advert.id}) }}"><i class="fa-regular fa-heart" style="color: black;"></i></a>

                     {% endif %}

				{% else %}
				<i class="fa-regular fa-heart"></i>
			{% endif %}
   </div>
   {% for image in advert.images %}
      <img class="card-img-top img-fluid img-card imgView"
        src="{{ asset('/uploads/images/' ~ image.name) }}" alt="Card image cap">
        {% endfor %}
</div>
<div class="card-body">
    <h5 class="card-title advert-title">{{ advert.title }}</h5>
    <div class="card-text">
    <p>{{ advert.brand }} </p>
        <p>{{ advert.price }} â‚¬</p>
    </div>
    <p class="text-center">
        <a href="{{ path('adverts_show', {'id': advert.id}) }}" class="btn btn-primary">Voir</a>
    </p>
</div>
</div>