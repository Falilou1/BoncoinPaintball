{% extends 'base.html.twig' %}

{% block title %}Adverts{% endblock %}

{% block body %}
    <h1>Adverts</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ advert.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ advert.title }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ advert.category }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ advert.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ advert.description }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ advert.brand }}</td>
            </tr>
            <tr>
                <th>UseCondition</th>
                <td>{{ advert.useCondition }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ advert.createdAt ? advert.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ advert.updatedAt ? advert.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ advert.status }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ advert.region }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_adverts_index') }}">back to list</a>

    <a href="{{ path('app_adverts_edit', {'id': advert.id}) }}">edit</a>

    {{ include('adverts/_delete_form.html.twig') }}
{% endblock %}
